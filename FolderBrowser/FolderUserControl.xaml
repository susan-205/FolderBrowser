<UserControl x:Class="FolderBrowser.FolderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FolderBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="5" Text="{Binding Titulo}"></TextBlock>
        <DockPanel>
            <Button DockPanel.Dock="Right" Margin="5" Content="Seleccionar" Click="Button_Click"></Button>
            <TextBox x:Name="TextBoxRuta" Text="{Binding Texto}" Margin="5" Template="{DynamicResource TextBoxControlTemplate1}"></TextBox>

        </DockPanel>
    </StackPanel>
</UserControl>
